<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false"><shape>
            <gradient android:endColor="#C9C9C9" android:startColor="#EBEBEB"
				android:angle="270" />
        </shape></item>
    <item android:state_focused="true"><shape>
         <gradient android:endColor="#C9C9C9" android:startColor="#6D7B8D"
				android:angle="270" />
            
        </shape></item>
    <item android:state_pressed="true"><shape>
           <gradient android:startColor="#ffff9933" android:endColor="#ffd16e04"
		 android:angle="270" android:dashWidth="2.5dp" android:dashGap="2.0dp"/>
        </shape></item>

</selector>